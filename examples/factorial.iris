// factorial.iris -- iterative factorial using a loop
//
// Run: cargo run -- --emit eval examples/factorial.iris

def factorial(n: i64) -> i64 {
    var result = 1
    var i = 1
    while i <= n {
        result = result * i
        i = i + 1
    }
    result
}

def main() -> i64 {
    val n = 10
    val f = factorial(n)
    print(concat("factorial(10) = ", to_str(f)));
    f
}
